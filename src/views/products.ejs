<%- include('layouts/header', {path: '/products'}) %>

<!-- Hero Section -->
<div class="relative bg-gradient-to-r from-green-100 via-yellow-100 to-gray-200 py-12 mb-8">
    <div class="container mx-auto flex flex-col md:flex-row items-center px-4">
        <div class="md:w-1/2 mb-8 md:mb-0">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Premium MICA Stone Stock</h1>
            <p class="text-lg text-gray-700 mb-4">Browse our selection of natural mica stones. No prices listedâ€”contact us for a quote tailored to your needs.</p>
            <ul class="list-disc pl-5 text-gray-700">
                <li>Industrial and decorative grades</li>
                <li>Bulk and custom orders</li>
                <li>Expert advice available</li>
            </ul>
        </div>
        <div class="md:w-1/2 flex justify-center">
            <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80" alt="Mica Stone" class="rounded-lg shadow-lg w-80 h-64 object-cover border-4 border-green-200">
        </div>
    </div>
</div>

<!-- Products Section -->
<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Our Stock</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% products.forEach(product => { %>
            <div class="relative bg-white rounded-lg shadow-lg overflow-hidden group transition-transform transform hover:scale-105 border border-green-100">
                <div class="relative">
                    <img src="<%= product.image || 'https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80' %>" alt="<%= product.name %>" class="w-full h-48 object-cover group-hover:opacity-80 transition">
                    <div class="absolute inset-0 bg-gradient-to-t from-green-900 via-transparent to-transparent opacity-60"></div>
                    <div class="absolute bottom-0 left-0 p-4">
                        <h3 class="text-lg font-semibold text-white drop-shadow"><%= product.name %></h3>
                    </div>
                </div>
                <div class="p-4">
                    <p class="mt-2 text-gray-700"><%= product.description || 'Natural mica stone, perfect for your needs.' %></p>
                    <button 
                        onclick="selectProduct('<%= product._id %>')" 
                        data-product-name="<%= product.name.replace(/"/g, '&quot;').replace(/'/g, '&#39;') %>"
                        class="mt-4 w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 shadow">
                        Inquire About This Product
                    </button>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script>
    function selectProduct(productId) {
        // Get the button that was clicked
        const btn = event.currentTarget || event.target;
        const productName = btn.getAttribute('data-product-name');
        // Store selected product in session storage
        sessionStorage.setItem('selectedProduct', JSON.stringify({
            id: productId,
            name: productName
        }));
        // Redirect to contact form
        window.location.href = '/contact';
    }
</script>

<%- include('layouts/footer') %>